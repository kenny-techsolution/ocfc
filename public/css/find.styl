.summary-section
	width 510px
	height 0%
	bottom 0px
	display block
	padding-top 10px
	padding-bottom 10px
	float right
	&.modal-open
		height 45%
	.row
		height 100%
		.col-xs-12
			height 100%

.summary-section__modal
	height 100%
	padding 10px 10px 20px 10px
	background-color white
	border-radius 3px
	box-shadow 1px 1px 5px 0px rgba(50, 50, 50, 0.75)

.summary-section__modal-header
	height 30px
	border-bottom 1px solid #ccc
	position relative
	color #333
	h5
		line-height 30px
		margin 0px auto
		font-size 14px
	.close
		background-image url("./images/cross_icon.svg")
		background-size 15px 15px
		margin-top 7px
		width 15px
		height 15px
		position absolute
		right 0px
		top 0px
		opacity 0.8
		&:hover 
			opacity 1

.summary-section__group-header
	height 40px
	position relative
	border-bottom 1px solid #ccc
	.letter-icon
		width 30px
		height 30px
		background-color #A83936
		color white
		line-height 30px
		text-align center
		position absolute
		top 5px
		left 0px
	h5
		color #333
		position absolute
		top 4px
		left 40px
		line-height 30px
		margin 0px auto
	.btn
		margin-top 3px
		width 87px

.summary-section__group-detail
	height calc(100% - 70px)
	position relative
	color #333
	overflow-y scroll
	padding 8px
	h6
		font-weight bold
		color black
		margin-bottom 0px
	p
		font-size 13px
	

