body
  padding-top 60px
  overflow hidden

#header
  margin-bottom: 0px;
  min-width 1040px
  height 70px
  -webkit-box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.70);
  -moz-box-shadow:    0px 1px 5px 0px rgba(0, 0, 0, 0.70);
  box-shadow:         0px 1px 5px 0px rgba(0, 0, 0, 0.70);
  background-image: url('images/ocfc_logo.png');
  background-repeat: no-repeat

#wrapper
  min-height 100%
  height 100%
  width 100%
  min-width 1040px
  position absolute
  top 0px
  left 0
  display inline-block

#intro-pg
    position fixed
    width 100%
    top 70px
    height 100%
    background-color #00B8FF
    z-index 5000

#main-wrapper
  height 100%
  overflow-y auto
  padding 70px 0 0px 250px
  width: 100%

#main
  position relative
  height 100%
  overflow-y auto
  background-color #f0f0f0

#sidebar-wrapper
  height 100%
  padding 80px 0 0px 0
  position fixed
  left 0px
  border-right 1px solid gray
  float left
  width 250px
  z-index 400
  -webkit-box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.70);
  -moz-box-shadow:    0px 0px 7px 0px rgba(0, 0, 0, 0.70);
  box-shadow:         0px 0px 7px 0px rgba(0, 0, 0, 0.70);

#sidebar
  position fixed
  z-index 3000
  left 0px
  height 100%
  width: 249px
  overflow-y auto
  .list-group
    z-index 300000
    .list-group-item
      border-radius 0
      border-left 0
      border-right 0
      border-top 0