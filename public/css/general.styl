*
	font-family Helvetica, sans-serif
body
	//background-image url("./images/group_study_wp.jpeg")
	background-image url("./images/binding_light.png")
	color white

[ng\:cloak], [ng-cloak], .ng-cloak
	display: none !important;

#global-header
	position fixed
	top 0px
	z-index 9999
	width 100%
	height 50px
	margin 0 auto 1px
	background white
	background rgba(255, 255, 255, 0.95)
	font-size 18px
	.gh-content
		display block
		width 980px
		height 30px
		margin auto
		margin-top 10px
		position relative
		.gh-tab
			height 30px
			background-repeat no-repeat
			display block
			position absolute
			&.brand
				width 30px
				background-image url("./images/ocfc_logo.png")
				background-size 29px 29px
			&.account
				width 30px
				background-image url("./images/kenny_face.jpg")
				background-size 30px 30px
				right 0px
				top 0px
				border-radius 5px
			&.notification
				width 30px
				background-image url("./images/notification_icon.svg")
				background-size 29px 29px
				right 50px
				top 0px
			&.explore
				width 83px
				color black
				font-size 14px
				line-height 30px
				right 100px
				top 0px
				text-decoration none
				&:hover
					text-decoration none
				.icon
					display block
					position absolute
					top 5px
					right 0px
					height 20px
					width 20px
					background-size 20px 20px
					&.cross
						background-image url("./images/cross_icon.svg")
					&.explore
						background-image url("./images/explore_icon.svg")

#explore-menu
	overflow hidden
	position fixed
	top 50px
	z-index 9999
	width 100%
	background rgba(255, 255, 255, 0.95)
	border-bottom 1px solid gray
	.em-content
		display block
		width 980px
		height auto
		margin 20px auto
		position relative
		.section
			color black
			min-height 50px
			width 25%
			display inline-block
			vertical-align top
			.title
				font-size 15px
				display block
				height 20px
				width 90%
				border-bottom 1px solid gray
			.group
				display block
				margin-top 5px
				font-size 15px
				color #08c
			.find-group
				color black
				font-size 14px
				margin-top 5px
			.coming-soon
				display block
				height 120px
				width 90%
				margin-top 5px
				line-height 120px
				color white
				background-color grey
				text-align center
			.description
				margin-top 5px
				width 90%
				color grey

.animate-show.ng-hide-add,
.animate-show.ng-hide-remove
	-webkit-transition 0.15s linear all
	transition 0.15s linear all
	opacity 1
	height 145px

.animate-show.ng-hide
	opacity 0
	height 0px

.animate-icon.ng-hide-add,
	-webkit-transition 0.3s linear all
	transition 0.3s linear all
	-webkit-transform rotate(0deg) scale(1)
	opacity 1

.animate-icon.ng-hide-remove
	-webkit-transition 0.3s linear all
	transition 0.3s linear all
	-webkit-transform rotate(-90deg) scale(1)
	opacity 1

.animate-icon.ng-hide
	-webkit-transition 0.3s linear all
	-webkit-transform rotate(-45deg) scale(0.2)
	opacity 0



