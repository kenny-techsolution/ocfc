*
	font-family Helvetica, sans-serif
	
html

body
	//background-image url("./images/group_study_wp.jpeg")
	background-image url("./images/vintage_speckles.png")
	color white
	background-color transparent
	height 100%
	//position relative
	#wrapper
		height 100%

a
	cursor pointer

[ng\:cloak], [ng-cloak], .ng-cloak
	display: none !important;

.inline-block
	display inline-block
	vertical-align top

input.form-control,
input:-webkit-autofill
	background-color: rgb(221, 220, 220);
	border-radius 0px
	height 34px
	box-shadow none
	border none
	//border 1px solid transparent
	font-size 12px

input.form-control:focus
	border none
	border-left 4px solid #428bca
	//border-color #00ADCC
	box-shadow none
	
button.btn
	font-size 10px
	padding 10px 25px
	border-radius 0px
	border none

.dropdown
	button
		background-color #dddcdc
		display inline-block
		padding 10px
		width 100%
		.caret
			float right
			margin-top 5px

.global-header
	position fixed
	top 0px
	z-index 9999
	width 100%
	height 50px
	margin 0 auto 1px
	background white
	background rgba(255, 255, 255, 0.95)
	font-size 18px

.global-header__content
	display block
	width 980px
	height 30px
	margin auto
	margin-top 10px
	position relative

.global-header__gh-tab
	height 30px
	background-repeat no-repeat
	display block
	position absolute

.global-header__gh-tab__brand
	width 29px
	height 29px
	background-image url("./images/ocfc_logo.png")
	background-size 29px 29px
	display list-item
	list-style-type none

.global-header__gh-tab__account
	cursor pointer
	width 30px
	height 30px
	position absolute
	background-image url("./images/kenny_face.jpg")
	background-size 30px 30px
	right 10px
	top 0px
	border-radius 5px
	&:hover
		opacity 0.7

.global-header__gh-tab__notification
	width 30px
	height 30px
	position absolute
	background-image url("./images/notification_icon.svg")
	background-size 29px 29px
	right 55px
	top 0px

.global-header__gh-tab__explore
	position absolute
	width 83px
	color black
	font-size 14px
	line-height 30px
	right 100px
	top 0px
	text-decoration none
	cursor pointer
	&:hover
		text-decoration none
		cursor pointer
	.icon
		display block
		position absolute
		top 5px
		right 0px
		height 20px
		width 20px
		background-size 20px 20px
		&.cross
			background-image url("./images/cross_icon.svg")
		&.explore
			background-image url("./images/explore_icon.svg")

.explore-menu
	overflow hidden
	position fixed
	top 50px
	z-index 9999
	width 100%
	background rgba(255, 255, 255, 0.95)
	border-bottom 1px solid gray

.explore-menu__content
	display block
	width 980px
	height auto
	margin 20px auto
	position relative

.explore-menu__content-section
	color black
	min-height 50px
	width 25%
	display inline-block
	vertical-align top
	.title
		font-size 15px
		display block
		height 20px
		width 90%
		border-bottom 1px solid gray
	.group
		display block
		margin-top 5px
		font-size 15px
		color #08c
	.find-group
		display block
		margin-top 5px
		width 116px
	.create-group
		display block
		margin-top 5px
		width 116px
	.coming-soon
		display block
		height 120px
		width 90%
		margin-top 5px
		line-height 120px
		color white
		background-size 100% auto
		background-color grey
		text-align center
		position relative
		&.church
			background-image url("./images/church_splash.jpeg")
		&.world
			background-image url("./images/world_splash.jpeg")
		&>div
			width 100%
			height 100%
			background-color black
			opacity 0.25
		&>span
			position absolute
			top 0px
			left 72px
			
	.description
		margin-top 5px
		width 90%
		color grey

.animate-show.ng-hide-add,
.animate-show.ng-hide-remove
	-webkit-transition 0.15s linear all
	transition 0.15s linear all
	opacity 1
	height 145px

.animate-show.ng-hide
	opacity 0
	height 0px

.animate-icon.ng-hide-add,
	-webkit-transition 0.3s linear all
	transition 0.3s linear all
	-webkit-transform rotate(0deg) scale(1)
	opacity 1

.animate-icon.ng-hide-remove
	-webkit-transition 0.3s linear all
	transition 0.3s linear all
	-webkit-transform rotate(-90deg) scale(1)
	opacity 1

.animate-icon.ng-hide
	-webkit-transition 0.3s linear all
	-webkit-transform rotate(-45deg) scale(0.2)
	opacity 0


