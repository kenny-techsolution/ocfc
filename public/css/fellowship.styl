.wall-filter
	border-bottom 1px solid #b3b3b3
	padding-bottom 5px
	width 100%
	&>div
		color gray
		display inline-block
		vertical-align top
		font-size 12px
		border-radius 3px
		margin-left 5px
		padding 3px 13px
		margin-right 5px
