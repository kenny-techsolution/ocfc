#post-feed.well
  margin-top 0px
  height auto
  background-color: transparent
  box-shadow: none
  border: none
  ocfc-filter-by-types
    .type-filter.container
      height 30px
      width 100%
      div
        display inline-block
        border 1px outset
        border-radius 5px
        width 65px
        height 28px
        margin-right 15px
        text-align center
        margin-top 14px
        font-weight bold
        p
          margin-bottom 0px
          margin-top 5px
      div.question
        &:hover
          border-color #5fcac6
        &:active
          color white
          background-color #5fcac6
      div.testimony
        &:hover
          border-color #76a5df
        &:active
          color white
          background-color #76a5df
      div.general
        &:hover
          border-color #a5adce
        &:active
          color white
          background-color #a5adce
      div.event
        &:hover
          border-color #6f7692
        &:active
          color white
          background-color #6f7692

