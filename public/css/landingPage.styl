//Common Signup Section

#intro-pg
	background url(./images/group_study_wp.jpeg) no-repeat center center fixed
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	height 100%
	width 100%
	.content
		font-size 12px
		width 850px
		margin-left auto
		margin-right auto
		margin-top 50px
		padding-top 15px
		color dimgrey
		.row
			margin-bottom 5px
		.welcome
			color white
			margin-top 50px
			h2
				font-family "Myriad Set Pro","Lucida Grande","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif"
		legend
			font-family "Myriad Set Pro","Lucida Grande","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif"
			margin-bottom 5px
			font-size 18px
			padding-bottom 5px
			span
				font-family "Myriad Set Pro","Lucida Grande","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif"
				font-size 14px
				margin-left 10px
				color rgb(155, 155, 155)
		.dropdown
			display inline-block
		.dropdown.month
			width 64px
			margin-right 5px
		.dropdown.date
			width 64px
			margin-right 5px
		.dropdown.year
			width 85px
		.row.forth
			margin-top 8px
			margin-bottom 4px
		.row.last
			margin-top 7px
			.gender
				float left
				display block
				height 30px
				margin-right 5px
				input
					position relative
					top 5px
				label
					position relative
					top 5px
					left 5px
					padding-right 10px
#signinSection
	span
		padding-top 5px
		input
			font-size 12px
			color darkgrey
			margin-bottom 5px
		label
			font-size 11px
			margin-left 4px
			margin-bottom 0px
			vertical-align super
			color #000000
	.row.second
		.password 
			float left
			width 139px
		button
			float left
	.remember-me
		label
			float left
			margin-top 3px
			margin-left 10px
		input
			float left
			margin-top 5px
			margin-left 0px
		a
			float left
			margin-top 3px
			margin-left 10px

//Common ocfc Section
#ocfcSection
	text-align center
	font-size 12px
	color dimgrey
	.about
		display inline-block
		margin-right 10px
	.contact
		display inline-block