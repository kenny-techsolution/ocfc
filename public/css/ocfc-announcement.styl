.announcement-widget
	width 100%
	height auto
	margin-top 5px
	.announcement-widget__output
		.edit-hover
			position relative
			border 1px solid #32a0df
		
.announcement-widget__header
	position relative
	margin-bottom 10px
	width 100%
	img
		width 35px
		height 35px
		border-radius 5px
		vertical-align top
		display inline-block
		margin-right 6px
	.name
		position absolute
		left 43px
		top 0px
		font-size 14px
		color #000
	.date
		font-size 10px
		left 43px
		position absolute
		top 19px
		color rgba(53,53,53,0.81)

.announcement-widget__annouce-profile-desc
	width 100%
	height auto
	margin-top 5px
	img
		width 35px
		height 35px
		border-radius 5px
		vertical-align top
		display inline-block
		margin-right 6px
	vertical-align top
	display inline-block


.announcement-widget__announcement-description
	font-size 13px
	color #2F2F2F

.announcement-widget__output-edit
	position relative
	background-color white
	padding 3px
	textarea
		position relative
		height 70px
		width 100%
		
.announcement-widget__options
	position relative
	width 190px
	height 26px
	left 228px
	.cancel
		position relative !important
		left 64px !important
		padding 6px 17px !important
		top 0px !important
	.done
		position relative !important
		left 64px !important
		padding 6px 17px !important
		top 0px !important