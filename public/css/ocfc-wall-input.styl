.ocfc-wall-input
	margin-top 10px
	margin-bottom 10px
	background-color white
	box-shadow 0 1px 5px rgba(0,0,0,0.25)
	border-radius 3px
	
.ocfc-wall-input__header
	border-bottom 1px solid rgba(179, 179, 179, 0.22);
	height 36px
	padding-top 4px
	.camera-icon
		margin-top 5px
		margin-left 10px
		float left
		width 20px
		heigth 20px
		color rgba(0,0,0,0.7)
		font-size 18px
	.share
		margin-top 5px
		margin-left 10px
		color rgba(0,0,0,0.7)
		float left
		width 80px
		heigth 20px
		font-size 12px
		line-height 19px
		.share-icon
			vertical-align text-top
			display inline-block
			margin-left 5px
			width 20px
			heigth 20px
			font-size 14px
			color rgba(0,0,0,0.7)
	.post-type-dropdown
		button
			border 2px solid #e8e8e8
			padding 5px 11px
			float right
			margin-right 2px
			width 159px
	.post-button
		float right
		margin-right 5px
		padding 7px 11px

.ocfc-wall-input__body
	position relative
	input
		width 98%
		margin-left 1%
		background-color #e8e8e8
		font-size 14px
		color #2f2f2f
		margin-top 3px
	textarea
		background-color #e8e8e8
		margin-left 1%
		margin-top 3px
		width 98%
		border none
		color #2f2f2f
		padding 5px
		padding-left 12px
		&:focus
			border-left 4px solid #428bca
			outline none

.ocfc-wall-input__media
	position relative
	width 100%
	height 37px

