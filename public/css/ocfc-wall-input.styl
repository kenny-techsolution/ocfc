.ocfc-wall-input
	margin-top 10px
	margin-bottom 10px
	background-color white
	box-shadow 0 1px 5px rgba(0,0,0,0.25)
	border-radius 3px
	
.ocfc-wall-input__header
	border-bottom 1px solid rgba(179, 179, 179, 0.22);
	height 36px
	padding-top 4px
	.camera-icon
		margin-top 5px
		margin-left 10px
		float left
		width 20px
		heigth 20px
		color rgba(0,0,0,0.7)
		font-size 18px
	.share
		margin-top 5px
		margin-left 10px
		color rgba(0,0,0,0.7)
		float left
		width 80px
		heigth 20px
		font-size 12px
		line-height 19px
		.share-icon
			vertical-align text-top
			display inline-block
			margin-left 5px
			width 20px
			heigth 20px
			font-size 14px
			color rgba(0,0,0,0.7)
	.post-type-dropdown
		button
			border 2px solid #e8e8e8
			padding 5px 11px
			float right
			margin-right 2px
			width 159px
	.post-button
		float right
		margin-right 5px
		padding 7px 11px

.ocfc-wall-input__body
	position relative
	input
		margin-left 1%
		background-color #e8e8e8
		font-size 14px
		color #2f2f2f
		margin-top 3px
	textarea
		margin-left 1%
		margin-top 3px
		width 98%

.ocfc-wall-input__media
	position relative
	width 100%
	height 120px
	padding 5px
	.inner
		position relative
		border-radius 5px
		background #2d2d2d
		padding 5px
		padding-left 1%
		width 100%
		height 110px
		//overflow-x auto
		.scrollable
			white-space nowrap
			overflow-x auto
.wall-img__image-section
	vertical-align top
	height 100px
	width 100px
	margin-right 5px
	display inline-block
	position relative
	background-color #e8e8e8
	cursor pointer
	img
		width 100px
		height 100px
		margin-right 5px
		position absolute
		opacity 0.7
	span.glyphicon-remove
		position absolute
		color #FFFFFF
		right 0px
		font-size 15px
		border-radius 1px
		padding 1px 4px
		opacity 0.5
		text-shadow 0px 2px 7px rgba(150, 150, 150, 1)
	&:hover span.glyphicon-remove
		opacity 0.9
	.progress
		height 5px
		background #32a0df
		position absolute
		left 0px
		bottom 0px
		margin-bottom 0px
		border-radius 0px

.upload-image
	vertical-align top
	height 100px
	width 100px
	margin-right 5px
	display inline-block
	position relative
	background-color #848484
	cursor pointer
	border 2px dashed white
	text-align center
	.glyphicon-plus
		vertical-align middle
		line-height 89px
		font-size 24px
		opacity 0.7
	&:hover
		background-color #B8B8B8
	&:hover	.glyphicon-plus
		opacity 1
			
