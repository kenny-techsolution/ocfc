//fellowship-members.jade
#members-page
	.member-card-section.container
		.row.tool-bar
			.col-xs-12
				div.glyphicon.glyphicon-home
				div.tool-bar__links
					a(ng-href="#" ng-click="goto('')") Home
					a(ng-href="#" ng-click="goto('members')") Members
					a(ng-href="/album") Albums
					a(ng-href="#") Resource
				a.tool-bar_setting.glyphicon.glyphicon-cog(ng-href="#")
		.row
			.member-menu
				.member-menu__title
					h3 
						.glyphicon.glyphicon-user
						| {{allMembers.length}} Members
				.member-menu__links
					a(ng-click='selectedMemberType="all"')
						| All
						span.badge {{allMembers.length}}
					a(ng-click='selectedMemberType="admin"')
						| Admin
						span.badge {{adminMembers.length}}
					a(ng-click='selectedMemberType="new"')
						| New
						span.badge {{newMembers.length}}
					a(ng-click='selectedMemberType="pending"')
						| Pending
						span.badge {{pendingMembers.length}}
					a Invite Others
		.row(ng-show="selectedMemberType=='all'")
			ocfc-member-card(user="user", is-current-user-admin="FellowshipDataSvc.isAdmin", ng-repeat="user in $parent.allMembers=(FellowshipDataSvc.users |filter:{'status':'approved'})")
		.row(ng-show="selectedMemberType=='admin'")
			ocfc-member-card(user="user", is-current-user-admin="FellowshipDataSvc.isAdmin", ng-repeat="user in $parent.adminMembers=(FellowshipDataSvc.users |filter:{'role':'admin'})")
		.row(ng-show="selectedMemberType=='pending'")
			ocfc-member-card(user="user", is-current-user-admin="FellowshipDataSvc.isAdmin", ng-repeat="user in $parent.newMembers=(FellowshipDataSvc.users |filter:{'status':'pending'})")
		.row(ng-show="selectedMemberType=='new'")
			ocfc-member-card(user="user", is-current-user-admin="FellowshipDataSvc.isAdmin", ng-repeat="user in $parent.pendingMembers=(FellowshipDataSvc.users |filter:newCondition)")			
		.row(ng-show='false')
			button.form-control.btn.btn-primary.invite-friends(ng-click="showInviteFriend = true;") 
				span.glyphicon.glyphicon-user
				| INVITE FRIENDS
			a(ng-click="showInviteFriend = false;") close
			.invite-widget.am-fade-and-slide-top(ng-if='showInviteFriend')
				.invite-widget__title
					h3
						span.glyphicon.glyphicon-user
						| Please provide emails to invite people to join.
				.invite-widget__add-emails
					.input-bar
						input.form-control(type="text", placeholder="add email here.")
						button.form-control.btn.btn-default
							span.glyphicon.glyphicon-plus
					ul.email-lists.list-group
						li.list-group-item yoyocicada@gmail.com
						li.list-group-item butterfly43026@gmail.com
				.invite-widget__message
						textarea.ocfc.form-control.message(placeholder="Include a welcome message here.")
				.invite-widget__bottom
					button.pull-right.form-control.btn.btn-primary
						span.glyphicon.glyphicon-send
						| SEND
					
				
