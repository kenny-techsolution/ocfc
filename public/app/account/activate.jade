.first-timer-content
	.first-timer-content--activate-success(ng-show="display")
		.first-timer-content--activate-success__first-timer-section
			img(ng-src='/css/images/ocfc_logo.png')
			.label Your account has been activated, please sign in
		.first-timer-content--activate-success__well(ng-include="'/partials/account/signin/signin'")
	.first-timer-content--activate-failure(ng-show="!display")
		h1 Your activation did not work, please try again.

