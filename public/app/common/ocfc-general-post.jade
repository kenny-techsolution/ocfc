.general-header
	img.general-header__profile-icon(ng-src='{{post.postBy.profileImg}}')
	.general-header__user-info
		.general-header__user-name {{post.postBy.fullName}}
		.general-header__post-date {{post.createdOn | date}}
	.general-header__post-type {{post.postType | PostTypeStrFilter}}
.general-header__output(ng-show='!showEdit') {{post.general[0].content}}
	button.btn.btn-lg.btn-primary.general-header__edit-delete(type='button', data-animation='am-flip-x', bs-dropdown='dropdown',ng-if='post.postBy._id===IdentitySvc.currentUser._id')
		span.caret
.general-header__image-display.row
	ocfc-one-image-display(ng-if='post.imageIds.length===1',post='post')
	ocfc-two-image-display(ng-if='post.imageIds.length===2',post='post')
	ocfc-three-image-display(ng-if='post.imageIds.length===3',post='post')
	ocfc-four-image-display(ng-if='post.imageIds.length===4',post='post')
	ocfc-five-image-display(ng-if='post.imageIds.length===5',post='post')
.general-header__output-edit(ng-show='showEdit')
	textarea(ng-model='newGenPostContent')
	.general-header__options
		button.btn.btn-lg.btn-primary.general-header__options-btn(ng-click='hideEditPost()') Cancel
		button.btn.btn-lg.btn-primary.general-header__options-btn(ng-click='updateEditedPost()')  Done Editing
.general-header__comment-output(ng-repeat='comment in post.comments')
	img(ng-src='{{comment.profileImg}}')
	.general-header__user-comment-name {{comment.fullName}}
	.general-header__post-comment-date {{comment.createdOn | date}}
	.general-header__post-comment-output {{comment.comment}}
	button.general-header__delete-comment(ng-click='deleteComment(comment)',ng-if='comment.userId===IdentitySvc.currentUser._id') X
.general-header__comment-input
	textarea(placeholder='type your comment here',ng-model='comment')
button.general-header__button.btn.btn-primary.pull-right.inline-block.choose-type.ng-pristine.ng-valid(ng-click='createComment()') Comment
