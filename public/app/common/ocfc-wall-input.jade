#ocfc-wall-input.post-msg-box
	.wall-header
		img.camera-icon(ng-src='/css/images/camera-logo.png', ng-file-select='onFileSelect($files)', data-multiple='false', title='profile', onclick='this.value = null')
		.share Share
			img.share-icon(ng-src='/css/images/share-icon.png')
		.post-type Type
		.test title: {{title}} content: {{content}}
		.wall-header__post-type-dropdown
			button.btn.btn-primary.pull-right.inline-block.choose-type(type='button', ng-model='selectedPostType', ng-options='postType.value as postType.label for postType in postTypes', bs-select='')
				| Action
				span.caret
		button.wall-header__post-button.btn.btn-primary.pull-right(ng-click='createPost(selectedPostType)',ng-disabled='isPostDisable()') Post
	textarea.wall-header__title(ng-model='title',ng-show='selectedPostType === "Testimony"',placeholder='Testimony title goes here')
	textarea.wall-header__event-title(ng-model='eventTitle',ng-show='selectedPostType === "Event"',placeholder='Event title goes here')
	input.wall-header__event-fromDate(ng-model='fromDate',ng-show='selectedPostType === "Event"',type='date')
	input.wall-header__event-toDate(ng-model='toDate',ng-show='selectedPostType === "Event"',type='date')
	textarea.wall-header__event-where(ng-model='eventWhere',ng-show='selectedPostType === "Event"',placeholder='Event location goes here')
	textarea.wall-header__event-hostBy(ng-model='eventHostBy',ng-show='selectedPostType === "Event"',placeholder='Event host name goes here')
	textarea.wall-header__textbox(ng-model='content')
	.wall-img.row
		.wall-img__image-section(ng-repeat='backgroundImgPath in backgroundImgPaths')
			img.wall-img__images(ng-src='{{backgroundImgPath}}')
			button.wall-img__image-delete(ng-click='deleteImage($index,backgroundImgPath)') X

