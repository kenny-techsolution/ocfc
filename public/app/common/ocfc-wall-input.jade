#ocfc-wall-input.post-msg-box
	.wall-header
		img.camera-icon(ng-src='/css/images/camera-logo.png', ng-file-select='onFileSelect($files)', data-multiple='false', title='profile', onclick='this.value = null')
		.share Share
			img.share-icon(ng-src='/css/images/share-icon.png')
		.post-type Type
		.wall-header__post-type-dropdown
			button.btn.btn-primary.pull-right.inline-block.choose-type(type='button', ng-model='selectedPostType', ng-options='postType.value as postType.label for postType in postTypes', bs-select='')
				| Action
				span.caret
		button.wall-header__post-button.btn.btn-primary.pull-right(ng-click='createPost(selectedPostType)') Post
	textarea.wall-header__textbox(ng-model='content')
	.wall-img.row
		.wall-img__image-section(ng-repeat='backgroundImgPath in backgroundImgPaths track by $index')
			img.wall-img__images(ng-src='{{backgroundImgPath}}')
			button.wall-img__image-delete(ng-click='deleteImage($index,backgroundImgPath)') X

