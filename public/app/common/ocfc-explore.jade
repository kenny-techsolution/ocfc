.explore-menu.animate-show(ng-show='exploreDropDown',ng-cloak, class="ng-cloak")
	.explore-menu__content(ng-class='{hide: hideExploreContent}')
		.explore-menu__content-section
			.title Personal
			.description This is your personal space more text to take up space.
			.find-group Go to My Personal Page >
		.explore-menu__content-section
			.title Fellowship
			a.group(href='/fellowship/{{userFellowship._id}}',ng-click='exploreDropDown = !exploreDropDown',ng-repeat='userFellowship in userFellowships') {{userFellowship.name}}
			a.find-group.label.label-primary(href="/find", ng-click='exploreDropDown = !exploreDropDown') Find a Fellowship >
			a.create-group.label.label-success(href='/createFellowship',ng-click='exploreDropDown = !exploreDropDown') Create Fellowship >
		.explore-menu__content-section
			.title Church
			a.group(href='/church/{{userChurch._id}}',ng-click='exploreDropDown = !exploreDropDown',ng-repeat='userChurch in userChurches') {{userChurch.name}}
			.find-group Find a Church >
			a.find-group(href='/createChurch',ng-click='exploreDropDown = !exploreDropDown') Create Church >
		.explore-menu__content-section
			.title World
			.coming-soon coming soon