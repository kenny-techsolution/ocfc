//Navigation page
//index.jade
extends ../includes/layout

block main-content
	#global-header
		.gh-content
			a.gh-tab.brand(href="/")
			.gh-tab.explore(href="/",ng-click='exploreDropDown = !exploreDropDown')
				|Explore
				span.icon.explore.animate-icon(ng-show="!exploreDropDown")
				span.icon.cross.animate-icon(ng-show='exploreDropDown', ng-cloak, class="ng-cloak")
			a.gh-tab.notification(href="/",ng-click='notificationFlyout = !notificationFlyout')
				.flyout(ng-hide="!notificationFlyout", ng-cloak, class="ng-cloak")
					.caret.pull-right
					ul
						li Your fellowship is approved
						li xxxxxxxxxxxxxxxx
			a.gh-tab.account(href="/",ng-click='profileFlyout = !profileFlyout')
				.flyout(ng-hide="!profileFlyout", ng-cloak, class="ng-cloak")
					.caret.pull-right
					ul
						li Edit profile
						li Setting
	#explore-menu.animate-show(ng-show='exploreDropDown' ng-cloak, class="ng-cloak")
		.em-content(ng-class='{hide: hideExploreContent}')
			.section.personal
				.title Personal
				.description This is your personal space more text to take up space.
				.find-group Go to My Personal Page >
			.section.fellowship
				.title Fellowship
				a.group 提摩太團契
				.find-group Find a Fellowship >
			.section.church
				.title Church
				a.group 山景城基督徒會堂
				.find-group Find a Church >
			.section.world
				.title World
				.coming-soon coming soon			
	#wrapper(ng-view)
			#ocfcSection
				a.about About Us
				a.contact Contact Us