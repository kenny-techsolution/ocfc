//Navigation page
//index.jade
extends ../includes/layout

block main-content
	.global-header
		.global-header__content
			a.global-header__gh-tab__brand(href="/")
			.global-header__gh-tab__explore(href="/",ng-click='exploreDropDown = !exploreDropDown', ng-show='IdentitySvc.currentUser',ng-cloak,class="ng-cloak")
				|Explore
				span.icon.explore.animate-icon(ng-show="!exploreDropDown")
				span.icon.cross.animate-icon(ng-show='exploreDropDown', ng-cloak, class="ng-cloak")
			.global-header__gh-tab__notification(href="/",ng-click='notificationFlyout = !notificationFlyout',ng-show='IdentitySvc.currentUser',ng-cloak,class="ng-cloak",bs-popover,data-placement="bottom",
									data-template='/partials/common/profile_popover', data-auto-close="1")
			img.global-header__gh-tab__account(href="/",ng-show='IdentitySvc.currentUser',ng-cloak,class="ng-cloak",bs-popover,data-placement="bottom",
									data-template='/partials/common/profile_popover', data-auto-close="1",ng-src='{{IdentitySvc.currentUser.profileImg}}')
	ocfc-explore
	#wrapper(ng-view)
			.ocfcSection
				a.ocfcSection__about About Us
				a.ocfcSection__contact Contact Us
