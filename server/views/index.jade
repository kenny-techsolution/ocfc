//Navigation page
//index.jade
extends ../includes/layout

block main-content
	#global-header
		.gh-content
			a.gh-tab.brand(href="/")
			.gh-tab.explore(href="/",ng-click='exploreDropDown = !exploreDropDown', ng-show='IdentitySvc.currentUser')
				|Explore
				span.icon.explore.animate-icon(ng-show="!exploreDropDown")
				span.icon.cross.animate-icon(ng-show='exploreDropDown', ng-cloak, class="ng-cloak")
			div.gh-tab.notification(href="/",ng-click='notificationFlyout = !notificationFlyout',ng-show='IdentitySvc.currentUser',bs-popover,data-placement="bottom",
									data-template='/partials/common/profile_popover', data-auto-close="1")
			div.gh-tab.account(href="/",ng-show='IdentitySvc.currentUser',bs-popover,data-placement="bottom",
									data-template='/partials/common/profile_popover', data-auto-close="1")
	#explore-menu.animate-show(ng-show='exploreDropDown' ng-cloak, class="ng-cloak")
		.em-content(ng-class='{hide: hideExploreContent}')
			.section.personal
				.title Personal
				.description This is your personal space more text to take up space.
				.find-group Go to My Personal Page >
			.section.fellowship
				.title Fellowship
				a.group(href='/fellowship/54913941aa6f4e0000642ae6',ng-click='exploreDropDown = !exploreDropDown') 提摩太團契
				a.find-group.label.label-primary(href="/find", ng-click='exploreDropDown = !exploreDropDown') Find a Fellowship >
				a.create-group.label.label-success(href='/createFellowship',ng-click='exploreDropDown = !exploreDropDown') Create Fellowship >
			.section.church
				.title Church
				a.group(href='/church/54755845e3d8ea9d8acd3d44',ng-click='exploreDropDown = !exploreDropDown') 山景城基督徒會堂
				.find-group Find a Church >
				a.find-group(href='/createChurch',ng-click='exploreDropDown = !exploreDropDown') Create Church >
			.section.world
				.title World
				.coming-soon coming soon			
	#wrapper(ng-view)
			#ocfcSection
				a.about About Us
				a.contact Contact Us